<h3>新規会員登録</h3>

<%= form_with model: @member, url: member_registration_path do |f| %>

<%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %><br>
    <%= f.text_field :nickname, size: 30 %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30  %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", size: 30  %>
  </div>

  <div class="field">
    <%= f.label :パスワード（２回目） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30  %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

すでにアカウントをお持ちの方は<%= render "public/shared/links" %>

</div>