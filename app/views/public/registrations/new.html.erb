<div class='sign'>
  <div class='sign-top'>
    <h3>新規会員登録</h3>
  </div>
<%= form_with model: @member, url: member_registration_path do |f| %>

<%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :nickname, placeholder: "ニックネーム", size: 30 %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス",size: 30  %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード６文字以上", size: 30  %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（２回目）", size: 30  %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
  <% end %>

    すでにアカウントをお持ちの方は<%= render "public/shared/links" %>
</div>
