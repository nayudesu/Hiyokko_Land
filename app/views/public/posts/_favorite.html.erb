  <% if post.favorited_by?(current_member) %>
      <%= link_to post_favorites_path(post.id), method: :delete, remote: true do %>
        <i class="fas fa-heart fa-4x hart"></i>　<%= post.favorites.count %>
      <% end %>
  <% else %>
      <%= link_to post_favorites_path(post.id), method: :post, remote: true do %>
        <i class="far fa-heart fa-4x"></i>　<%= post.favorites.count %>
      <% end %>
  <% end %>


