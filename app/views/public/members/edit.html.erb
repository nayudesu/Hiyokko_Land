<div class='container'>
  <div class='row  justify-content-center'>
    <div class="col-md-8 col-sm-12 sign">
      <div class="sign-top">
        <h3>マイページ編集</h3>
      </div>
      <div class="new">
        <%= form_with model: @member do |f| %>
        <table>
          <tr>
            <th>
              プロフィール画像
            </th>
            <td>
              <%= f.file_field :profile_image, accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <th>
              <i class="far fa-smile"></i><%= f.label :ニックネーム %>
            </th>
            <td>
              <%= f.text_field :nickname, class: 'member-body' %>
            </td>
          </tr>
          <tr>
            <th>
              <i class="far fa-envelope"></i><%= f.label :メールアドレス %>
            </th>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'member-body' %>
            </td>
          </tr>
          <tr>
            <th>
              <i class="far fa-comment-dots"></i><%= f.label :自己紹介文 %>
            </th>
            <td>
              <%= f.text_area :introduction, class: 'member-body' %>
            </td>
          </tr>
        </table>
        <div class="d-flex justify-content-around">
          <div class="actions">
             <%= f.submit "変更を保存する", class: 'btn btn-green'  %>
          </div>
          <div class="actions">
            <%= link_to "退会する", public_unsubscribe_path(@member), class: 'btn btn-red mt-3' %>
          </div>
        </div>
      </div>
  </div>
  <% end %>
</div>