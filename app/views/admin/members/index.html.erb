<h1>ユーザーの一覧</h1>

<% @members.each do |member| %>

  <% if member.profile_image.attached? %>
    <%= image_tag member.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no-image-icon', size: "100x100" %>
  <% end %>

<%= link_to admin_member_path(member) do %><%= member.nickname %><% end %>

<%= member.introduction %>

<% if member.is_deleted == false%>
  有効
<% else %>
  退会
<% end %>


<% end %>
