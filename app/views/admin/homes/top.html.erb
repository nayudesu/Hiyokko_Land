<div class="admin-back">
  <div class='container'>
    <div class="row">
      <div class="title">
        <h2>ユーザーの一覧</h2>
      </div>
    </div>
    <div class="row admin d-flex flex-column-reverse" style='width: 100%;'>
      <% @members.each do |member| %>
      <div class='members'>
        <table>
          <tr>
            <td>
                <% if member.profile_image.attached? %>
                  <%= image_tag member.profile_image, size: "50x50"%>
                <% else %>
                  <%= image_tag 'no-image-icon', size: "50x50"%>
                <% end %>
            </td>
            <td>
                <%= link_to admin_member_path(member) do %>
                  <%= member.nickname %>
                <% end %>
            </td>
            <td>
              (<%= member.introduction %>)
            </td>
            <td>
                <% if member.is_deleted == false %>
                  <span style="font-weight: bold; color: orange;">有効</span>
                <% else %>
                  退会
                <% end %>
            </td>
          </tr>
        </table>
      </div>
      <% end %>
      <%= paginate @members %>
    </div>
  </div>
</div>