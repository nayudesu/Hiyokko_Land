<div class="top">
  <div class="title">
    <h1>ユーザーの一覧</h1>
  </div>
  <% @members.each do |member| %>
  <div class='col-8 members'>
    <table>
      <tr>
        <td>
          <% if member.profile_image.attached? %>
            <%= image_tag member.image, size: "50x50" %>
          <% else %>
            <%= image_tag 'no-image-icon', size: "50x50" %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_member_path(member) do %>
            <%= member.nickname %>
          <% end %>
        </td>
        <td>
          <% if member.is_deleted == false %>
            <span style="font-weight: bold; color: orange;">有効</span>
          <% else %>
            退会
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <% end %>
</div>