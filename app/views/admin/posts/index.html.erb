<h1>ユーザーの投稿一覧</h1>

<% @posts.each do |posts| %>

<h6>ユーザーネーム</h6>
  <%= link_to admin_member_path(posts.member) do %><%= posts.member.nickname %><% end %>

<h4>画像</h4>
  <%= link_to admin_post_path(posts) do %>
    <% if posts.image.attached? %>
      <%= image_tag posts.image, size: "50x50" %>
    <% else %>
      <%= image_tag 'no_image', size: "50x50" %>
    <% end %>
  <% end %>

<h4>ジャンル</h4>
  <%= posts.genre.name %>

<h4>タイトル</h4>
  <%= link_to admin_post_path(posts) do %><%= posts.title %><% end %>

<% end %>