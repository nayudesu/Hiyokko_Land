  <div class='container'>
    <div class="search">
      <div class='title'>
        <h3>ユーザーの投稿一覧</h3>
      </div>
      <div class='row d-flex p-3'>
        <div class="col-md-4 offset-md-1 col-sm-12">
          <span>
            <%= link_to '新着順', admin_posts_path(latest: "true") %>
            |<%= link_to '古い投稿順', admin_posts_path(old: "true") %>
            |<%= link_to '人気順', admin_posts_path(favorite_count: "true") %>
          </span>
        </div>
        <div class='col-md-2 col-sm-12'>ジャンル検索</div>
        <div class='col-md-4 col-sm-12'>
          <%= form_with url: admin_genre_search_path, method: :get do |f| %>
            <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %>
            <%= f.submit '検索', class: 'rounded-pill bg-success text-white border border-success' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row justify-content-around">
      <div class="post-back col-12">
        <div class="posts">
          <%= render 'post', posts: @posts %>
        </div>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>
