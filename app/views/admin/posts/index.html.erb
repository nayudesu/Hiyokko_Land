<div class='top'>
  <div class='container'>
    <div class="search">
      <div class='title'>
        <h3>ユーザーの投稿一覧</h3>
      </div>
      <div>
        <h6>
          ジャンル検索
          <%= form_with url: genre_search_path, method: :get do |f| %>
            <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %>
            <%= f.submit '検索' %>
          <% end %>
        </h6>
      </div>
    </div>
    <div class="row">
      <div class="col-10">
        <div class="posts">
          <%= render 'public/posts/post', posts: @posts %>
        </div>
      </div>
    </div>
 </div>
</div>
